import os

os.system("cls || clear")
#declarando variável
nota = float 

#obtendo dados do usuário
nota = float(input("Digite sua Nota:"))


#termo de condição
if(nota>=7):
    print("Aprovado!!")
    
#Elif (PYTHON ) == else if ( C )

elif nota >=5:
    print("Em Recuperação")

elif nota >=4:
    print("Conselho de Classe")

else:
    print("Recuperação")
